/* FONT PATH
 * -------------------------- */

@font-face {
  font-family: 'FontAwesome';
  src: url('<%= font_path('fontawesome-webfont.eot') %>?v=#{$fa-version}');
  src: url('<%= font_path('fontawesome-webfont.eot') %>?#iefix&v=#{$fa-version}') format('embedded-opentype'),
    url('<%= font_path('fontawesome-webfont.woff') %>?v=#{$fa-version}') format('woff'),
    url('<%= font_path('fontawesome-webfont.ttf') %>?v=#{$fa-version}') format('truetype'),
    url('<%= font_path('fontawesome-webfont.svg') %>?v=#{$fa-version}#fontawesomeregular') format('svg');
  //src: font-url('FontAwesome.otf') format('opentype'); // used when developing fonts
  font-weight: normal;
  font-style: normal;
}
